{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["react-app", "prettier", "plugin:flowtype/recommended"],
    "plugins": ["react", "prettier", "flowtype"],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "trailingComma": "es5",
                "semi": false,
                "jsxSingleQuote": true,
                "singleQuote": true,
                "useTabs": true
            }
        ]
    }
}